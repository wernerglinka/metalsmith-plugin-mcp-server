{
  // Auto-sync with remote before releases to prevent conflicts from CI commits (e.g., coverage badge updates)
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "changelog": "npx auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)' --stdout"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": null,
    "web": false
  },
  "npm": {
    "publish": false,
    "publishPath": "."
  },
  "hooks": {
    "before:init": ["git pull", "npm test", "npm run lint"],
    "after:bump": "npx auto-changelog -p --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)' && git add CHANGELOG.md",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
